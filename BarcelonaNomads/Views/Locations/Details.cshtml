@model BarcelonaNomads.Models.Location

@{
    ViewData["Title"] = @Model.Name + " - Details";
}


<div class="row justify-content-center">
    <div class="col col-md-6">
        <h1>@Model.Name</h1>
        <p><i class="bi bi-pin-map"></i> @Html.DisplayFor(model => model.Address)</p>
        <p>@Html.DisplayFor(model => model.LocationType)</p>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col col-md-6">
        <div class="rounded overflow-hidden ratio ratio-16x9">
            <img class="img-fluid object-fit-cover" src="@Model.ImageURL" alt="@Model.Name">
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-12 col-md-6 mt-3">
        @foreach (var item in @Model.Reviews)
        {
            <div class="pt-1">
                <p><i class="bi bi-chat-dots"></i> @item.Content</p>
            </div>
            <hr />
        }
    </div>
</div>
<div class="row justify-content-center">
    <div class="mt-4 col-12 col-md-6 d-flex justify-content-between">
        <a class="btn btn-success" asp-action="Index">Back to List</a>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>
